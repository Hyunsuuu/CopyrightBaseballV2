<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VsGameActivity" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="58.5"
        android:scaleType="fitXY"
        android:src="@drawable/play" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="105.5"
        android:background="@drawable/play2"
        android:paddingLeft="42dp"
        android:paddingRight="42dp"
        android:paddingTop="16dp" >

        <TextView
            android:id="@+id/TV_VS_QUESTION"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="13sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="118"
        android:scaleType="fitXY"
        android:src="@drawable/play3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="122"
        android:background="@drawable/play4"
        android:gravity="center" >

        <ImageView
            android:id="@+id/IMG_VS_1_SECOND_BASE"
            android:layout_width="36.5dp"
            android:layout_height="47dp" />

        <ImageView
            android:id="@+id/IMG_VS_2_SECOND_BASE"
            android:layout_width="36.5dp"
            android:layout_height="47dp"
            android:layout_toRightOf="@+id/IMG_VS_1_SECOND_BASE" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="124.5"
        android:background="@drawable/play5" >

        <ImageView
            android:id="@+id/IMG_VS_1_FIRST_BASE"
            android:layout_width="36.5dp"
            android:layout_height="47dp"
            android:layout_toLeftOf="@+id/IMG_VS_2_FIRST_BASE" />

        <ImageView
            android:id="@+id/IMG_VS_1_THIRD_BASE"
            android:layout_width="36.5dp"
            android:layout_height="47dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp" />

        <ImageView
            android:id="@+id/IMG_VS_2_FIRST_BASE"
            android:layout_width="36.5dp"
            android:layout_height="47dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="60dp" />

        <ImageView
            android:id="@+id/IMG_VS_2_THIRD_BASE"
            android:layout_width="36.5dp"
            android:layout_height="47dp"
            android:layout_toRightOf="@+id/IMG_VS_1_THIRD_BASE" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="111.5"
        android:background="@drawable/play6" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/BTN_VS_X"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/BTN_VS_O"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/IMG_VS_1_HOME"
                android:layout_width="36.5dp"
                android:layout_height="47dp" />

            <ImageView
                android:id="@+id/IMG_VS_2_HOME"
                android:layout_width="36.5dp"
                android:layout_height="47dp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>