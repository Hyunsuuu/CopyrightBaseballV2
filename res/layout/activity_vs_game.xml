<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VsGameActivity" >
    
    <TextView
        android:id="@+id/TV_VS_QUESTION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/IMG_VS_1_HOME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/IMG_VS_1_FIRST_BASE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/IMG_VS_1_SECOND_BASE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/IMG_VS_1_THIRD_BASE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/IMG_VS_2_HOME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/IMG_VS_2_FIRST_BASE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/IMG_VS_2_SECOND_BASE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/IMG_VS_2_THIRD_BASE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    
    <Button
        android:id="@+id/BTN_VS_O"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O" />

    <Button
        android:id="@+id/BTN_VS_X"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X" />

</LinearLayout>