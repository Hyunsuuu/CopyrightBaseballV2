<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SingleAddTeamNameActivity" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/copy_info_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/copy_info_background"
            android:gravity="center"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/ET_SINGLE_NAME"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:background="@drawable/copy_info_box"
                android:singleLine="true" />

            <Button
                android:id="@+id/BTN_SINGLE_NAME_CONFIRM"
                android:layout_width="158.5dp"
                android:layout_height="50.5dp"
                android:background="@drawable/copy_info_start" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>