<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SelectModeActivity" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/copy_mode_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center" >

        <Button
            android:id="@+id/BTN_SINGLE_MODE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
			android:background="@drawable/copy_mode_solo" />
        <Button
            android:id="@+id/BTN_VS_MODE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/copy_mode_vs" />
    </LinearLayout>

</LinearLayout>