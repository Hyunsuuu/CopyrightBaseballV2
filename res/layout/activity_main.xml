<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/copy_back"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="4" >

        <ImageView
            android:layout_width="230dp"
            android:layout_height="202.5dp"
            android:layout_centerInParent="true"
            android:src="@drawable/main_logo" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/BTN_START_GAME"
                android:layout_width="227dp"
                android:layout_height="49dp"
                android:layout_centerInParent="true"
                android:background="@drawable/main_start" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/BTN_ABOUT_SITES"
                android:layout_width="227dp"
                android:layout_height="49dp"
                android:layout_centerInParent="true"
                android:background="@drawable/main_site" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/BTN_STUDY"
                android:layout_width="227dp"
                android:layout_height="49dp"
                android:layout_centerInParent="true"
                android:background="@drawable/main_study" />
        </RelativeLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/BTN_RANK"
                android:layout_width="227dp"
                android:layout_height="49dp"
                android:layout_centerInParent="true"
                android:background="@drawable/main_rank" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>